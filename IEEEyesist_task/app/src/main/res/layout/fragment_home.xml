<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">

        <include layout="@layout/custom_toolbar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorAccent"
                android:layout_alignParentBottom="true"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:layout_alignParentTop="true"></TextView>
            <TextView
                android:layout_width="333dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:background="@drawable/rounded_corner"
                android:textSize="12dp"
                android:textColor="#000000"
                android:fontFamily="@font/nunito"
                android:textFontWeight="600"
                android:text="A program under ASIST - Augmented Social Innovations through Science and Technology"></TextView>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/colorPrimary"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="570dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/cardone" />

            <TextView
                android:id="@+id/innotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Age of Innovation"
                android:textColor="#ffffff"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textFontWeight="800"
                android:layout_alignParentLeft="true"
                card_view:fontFamily="@font/poppins_light" />

            <TextView
                android:id="@+id/txtview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="40dp"
                android:background="#99ffffff"
                android:singleLine="false"
                android:text="ARK Invest, an investment management company focused solely on disruptive innovation, has done a lot of research on the foundational innovations that will shape our world in the next few decades. They refer to these foundational and disruptive innovations as innovation platforms. While information technology and the ARK has identified five innovation platforms that they driving costs down, creating huge demand growth across virtually all sectors and geographies."
                android:textColor="#000000"
                android:textSize="16dp"
                android:textFontWeight="400"
                card_view:fontFamily="@font/nunito" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_viewtwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/colorPrimary"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="570dp">
            <ImageView
                android:id="@+id/imageViewtwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/cardtwo" />

            <TextView
                android:id="@+id/visstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Our Vission"
                android:textColor="#ffffff"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textFontWeight="800"
                card_view:fontFamily="@font/poppins_light"
                />
            <TextView
                android:id="@+id/txtview2"
                android:layout_width="match_parent"
                android:background="#99ffffff"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="ARK Invest, an investment management company focused solely on disruptive innovation, has done a lot of research on the foundational innovations that will shape our world in the next few decades. They refer to these foundational and disruptive innovations as innovation platforms. While information technology and the ARK has identified five innovation platforms that they driving costs down, creating huge demand growth across virtually all sectors and geographies."
                android:singleLine="false"
                android:padding="40dp"
                android:layout_alignParentBottom="true"
                card_view:fontFamily="@font/nunito"
                android:textFontWeight="400"
                android:textColor="#000000" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_viewthree"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/colorPrimary"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="570dp">
            <ImageView
                android:id="@+id/imageViewthree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/cardthree" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Mission"
                android:textSize="36sp"
                android:padding="16dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/misstext"
                android:textFontWeight="800"
                card_view:fontFamily="@font/poppins_light"/>
            <TextView
                android:id="@+id/txtview3"
                android:layout_width="match_parent"
                android:background="#99ffffff"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="ARK Invest, an investment management company focused solely on disruptive innovation, has done a lot of research on the foundational innovations that will shape our world in the next few decades. They refer to these foundational and disruptive innovations as innovation platforms. While information technology and the ARK has identified five innovation platforms that they driving costs down, creating huge demand growth across virtually all sectors and geographies."
                android:singleLine="false"
                android:layout_alignParentBottom="true"
                android:padding="40dp"
                card_view:fontFamily="@font/nunito"
                android:textFontWeight="400"
                android:textColor="#000000" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
</ScrollView>